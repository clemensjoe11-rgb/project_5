{
  "framework": "vite",
  "buildCommand": "cd client && npm install --no-audit --no-fund && npm run build",
  "outputDirectory": "client/dist",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://DEINE-RENDER-DOMAIN/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
