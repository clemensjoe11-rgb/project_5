{
  "framework": "vite",
  "buildCommand": "npm --prefix client ci && npm --prefix client run build",
  "outputDirectory": "client/dist",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://DEINE-RENDER-DOMAIN/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
